@using FormData.Models
@model IEnumerable<FormData.Models.CartDTO>
@*@model IEnumerable<FormData.DataLayer.Customer>*@

@{
    ViewBag.Title = "Customer";
}

<h1>Customer Shipping Information</h1>

<dir>
    <h3>Please enter your shipping information below</h3>
</dir>

<form action="@Url.Action("Confirmation", "Checkout")" method="post">
    <table class="table table-bordered table-responsive table-striped table-hover">

        <tbody>
            <tr>
                <td>
                    @foreach (CartDTO data in Model)
                    {
                        <b>Company name:</b>
                        <b>@data.CompanyName</b>
                        <p></p>
                        <b>Customer Name: </b>
                        <b>@data.CustomerName</b>
                        break;
                    }
                    @foreach (CartDTO data in Model)
                    {
                        if (data.Address != null)
                        {
                            <p></p>
                            <br />
                            <b>Shipping Address:</b>
                            <br />
                            <b>@data.Address</b>
                        }
                        else
                        {
                            <br/>
                            <br/>
                            <label>Address</label>
                            <p></p>
                            <input type="text" name="sAddress" placeholder="Address ..." />
                        }
                        if (data.City != null)
                        {
                            <br/>
                            <b>@data.City</b>
                        }
                        else
                        {
                            <br />
                            <br />
                            <label>City</label>
                            <p></p>
                            <input type="text" name="sCity" placeholder="City ..." />
                        }
                        if (data.PostalCode != null)
                        {
                            <br/>
                            <b>Postal code:</b>
                            <br/>
                            <b>@data.PostalCode</b>
                        }
                        else
                        {
                            <br />
                            <br />
                            <label>Postal Code</label>
                            <p></p>
                            <input type="text" name="sPostalCode" placeholder="Postal Code ..." />
                        }
                        if (data.EmailAddress != null)
                        {
                            <br/>
                            <p></p>
                            <b>Email Address:</b>
                            <br/>
                            <b>@data.EmailAddress</b>
                        }
                        else
                        {
                            <p></p>
                            <label>Email address</label>
                            <p></p>
                            <input type="text" name="sEmail" placeholder="Email address ..." />
                        }
                        break;
                    }


                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-default">Check out</button>
</form>