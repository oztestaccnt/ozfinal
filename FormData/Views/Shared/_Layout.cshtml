<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Northwind", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Products -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-barcode"></i>&nbsp;Products<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index","Category")"><i class="glyphicon glyphicon-list"></i>&nbsp;Browse Categories</a></li>
                            <li><a href="@Url.Action("Index","Discount") "><i class="glyphicon glyphicon-gift"></i>&nbsp;Current Discounts</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-user"></i>Customers<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("SignIn","Customer")"><i class="glyphicon glyphicon-log-in"></i>&nbsp;Sign In</a></li>
                            <li><a href="@Url.Action("Register","Customer")"><i class="glyphicon glyphicon-registration-mark"></i>&nbsp;Register</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("Account","Customer")"><i class="glyphicon glyphicon-user"></i>&nbsp;Your Account</a></li>
                        </ul>
                    </li>
                    @*<li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Lessons<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Lesson2", "Lessons")">Lesson 2</a></li>
                            <li><a href="@Url.Action("Lesson9", "Lessons")">Lesson 9</a></li>
                            @*<li><a href="@Url.Action("", "")">Next Lesson</a></li>
                        </ul>
                    </li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-list"></i>&nbsp;Lessons<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index","Birthday") "><i class="glyphicon glyphicon-bullhorn"></i>&nbsp;Birthday</a></li>
                            <li>@Html.ActionLink("Pizza", "Bake", "Assignments")</li>
                            <li>@Html.ActionLink("Car", "Year", "Assignments")</li>
                            <li><a href="@Url.Action("Assignment9", "Assignments")">Assignment 9</a></li>
                            <li><a href="@Url.Action("CustomerModel", "Assignments")">Unit 2 Project</a></li>
                        </ul>
                    </li>
                    <form class="navbar-form navbar-left hidden-xs" role="search" method="get" action="@Url.Action("Index","Product")">
                        <div class="form-group">
                            <input type="text" class="form-control" name="SearchString" id="SearchString" placeholder="Product Search">
                        </div>
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </form>

                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("SignOut", "Customer")"><i class="glyphicon glyphicon-log-out"></i></a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("GetData","Chart")"><i class="glyphicon glyphicon-list-alt"></i></a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("MyCart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a></li>
                       </ul>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
